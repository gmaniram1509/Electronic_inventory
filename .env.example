# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,your-ec2-public-ip,your-ec2-dns

# Database Settings (Local SQLite for development)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# AWS RDS PostgreSQL (Production - uncomment and fill when deploying)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=inventorydb
# DB_USER=postgres
# DB_PASSWORD=your-rds-password
# DB_HOST=your-rds-endpoint.rds.amazonaws.com
# DB_PORT=5432

# AWS Credentials
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1

# AWS S3 Storage
AWS_STORAGE_BUCKET_NAME=electronic-inventory-storage
AWS_S3_CUSTOM_DOMAIN=electronic-inventory-storage.s3.amazonaws.com

# AWS SES Email
AWS_SES_REGION=us-east-1
SES_FROM_EMAIL=your-verified-email@example.com

# SMTP Settings (for SES)
EMAIL_BACKEND=django_ses.SESBackend
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-smtp-username
EMAIL_HOST_PASSWORD=your-smtp-password

# Application Settings
LOW_STOCK_ALERT_EMAIL=your-email@example.com
ADMIN_EMAIL=your-email@example.com

# ===================================================================
# NEW AWS SERVICES CONFIGURATION (5 Additional Services)
# ===================================================================

# AWS SNS (Simple Notification Service) - Real-time notifications
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:YOUR_ACCOUNT_ID:inventory-alerts
SNS_ENABLED=True

# AWS DynamoDB - Activity and audit logging
DYNAMODB_TABLE_NAME=inventory-logs
DYNAMODB_ENABLED=True

# AWS Lambda - Serverless transaction processing
LAMBDA_FUNCTION_NAME=inventory-transaction-processor
LAMBDA_ENABLED=True

# AWS ElastiCache (Redis) - Caching layer
ELASTICACHE_ENDPOINT=your-elasticache-endpoint.cache.amazonaws.com
ELASTICACHE_PORT=6379
REDIS_URL=redis://your-elasticache-endpoint.cache.amazonaws.com:6379/0

# AWS Secrets Manager - Secure credential storage
SECRETS_MANAGER_ENABLED=True
DB_SECRET_NAME=inventory/database
APP_SECRET_NAME=inventory/application
